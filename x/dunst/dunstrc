[global]
    font = JetBrains Mono 10

    # <b>bold</b>
    # <i>italic</i>
    # <s>strikethrough<s/>
    # <u>underline</u>

    allow_markup = yes
    markup = full

    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    format = "<span size="large"><b>%s</b></span>\n\n%b"

    # Icon settings
    icon_position = left
    min_icon_size = 48
    max_icon_size = 96
    icon_folders = ""

    # Indicators
    show_indicators = no

    # Sort messages by urgency
    sort = yes

    # Show how many messages are currently hidden (because of geometry)
    indicate_hidden = false

    # alignment of message text.
    # Possible values are "left", "center" and "right"
    alignment = left
    vertical_alignment = center

    bounce_freq = 0

    # show age of message if message is older than show_age_threshold seconds.
    # set to -1 to disable
    show_age_threshold = -1

    hide_duplicates_count = true

    word_wrap = yes

    # ignore newlines '\n' in notifications
    ignore_newline = no

    # geometry [{width}]x{height}][+/-{x}+/-{y}]
    # The height is measured in number of notifications everything else in pixels.
    geometry = [384x5][-30-10]

    notification_height = 0
    shrink = true
    # The transparency of the window. range: [0; 100]
    transparency = 18

    idle_threshold = 120

    monitor = 0

    # Display notification on focused monitor. Possible modes are:
    # mouse: follow mouse pointer
    # keyboard: follow window with keyboard focus
    # none: don't follow anything
    #
    # "keyboard" needs a windowmanager that exports the _NET_ACTIVE_WINDOW property.
    # This should be the case for almost all modern windowmanagers.
    #
    # If this option is set to mouse or keyboard, the monitor option will be
    # ignored.
    follow = keyboard

    # should a notification popped up from history be sticky or
    # timeout as if it would normally do.
    sticky_history = yes

    line_height = 0
    separator_height = 0

    # padding between text and separator
    padding = 8
    horizontal_padding = 8

    separator_color = frame

    startup_notification = false

    # paths
    rofi = /usr/bin/rofi -p dunst:
    browser=/usr/bin/firefox-developer-edition -new-tab

    mouse_left_click = close_current
    mouse_right_click= do_action, close_current

# IMPORTANT: colors have to be defined in quotation marks.
# Otherwise the '#' and following  would be interpreted as a comment.
[frame]
    width = 2
    color = "#50FA7B"

[low]
    msg_urgency = low
    format = "<span size="large">󰦕<b> %s </b></span>\n%b"
    background = "#282A36"
    foreground = "#F8F8F2"
    frame-color = "#50FA7B"
    frame-width = 2
    timeout = 3

[urgency_normal]
    background = "#282A36"
    foreground = "#F8F8F2"
    frame-color = "#50FA7B"
    frame-width = 2
    timeout = 5

[critical]
    msg_urgency = critical
    format = "<span size="large">󰚌 <b>%s </b></span>\n<b>ERROR: </b>%b"
    background = "#282A36"
    foreground = "#F8F8F2"
    frame-color = "#50FA7B"
    frame-width = 2
    timeout = 5
