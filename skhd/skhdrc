####################
### Window State ###
####################

# float / unfloat window and restore position
# alt - t : yabai -m window --toggle float && /tmp/yabai-restore/$(yabai -m query --windows --window | jq -re '.id').restore 2>/dev/null || true
alt - t : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# toggle sticky (show on all spaces)
alt - y : yabai -m window --toggle sticky

# toggle topmost (keep above other windows)
alt - o : yabai -m window --toggle topmost

# toggle picture-in-picture
alt - p : yabai -m window --toggle border && \
          yabai -m window --toggle pip

# change layout of desktop
ctrl + alt - a : yabai -m space --layout bsp
ctrl + alt - d : yabai -m space --layout float
ctrl + alt - s : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "float" else "bsp" end')

# Focus window of same app
 alt - tab: yabai -m window --focus "$(yabai -m query --windows | jq -re "map(select(.app == \"$(yabai -m query --windows --window | jq -re '.app')\")) | sort_by(.id) | .[([.[].id] | index($(yabai -m query --windows --window | jq -re '.id')) + 1) % length].id")"

####################
### Applications ###
####################

# Terminal
cmd - return : open -a "Ghostty"

# Applications
:: apps
alt - a ; apps
apps < v : open -a "NordVPN" ; skhd -k 'escape'
apps < m : open -a "Mail" ; skhd -k 'escape'
apps < c : open -a "Calendar" ; skhd -k 'escape'
apps < s : open -a "Spotify" ; skhd -k 'escape'
apps < q : open -a "qBittorrent" ; skhd -k 'escape'
apps < n : open -a "Notes" ; skhd -k 'escape'
apps < r : open -a "Reminders" ; skhd -k 'escape'

apps < return ; default
apps < escape ; default

# Engineering
:: eng
ctrl - space ; eng

eng < e : open -a "Intellij IDEA" ; skhd -k 'escape'
eng < w : open -a "WebStorm" ; skhd -k 'escape'
eng < d : open -a "DataGrip" ; skhd -k 'escape'
eng < r : open -a "RustRover" ; skhd -k 'escape'
eng < c : open -a "CLion" ; skhd -k 'escape'
eng < g : open -a "GoLand" ; skhd -k 'escape'
eng < p : open -a "Postman" ; skhd -k 'escape'
eng < v : open -a "Visual Studio Code" ; skhd -k 'escape'

eng < return ; default
eng < escape ; default

# Social
:: social
alt - s ; social

apps < t : open -a "Telegram" ; skhd -k 'escape'
apps < s : open -a "Slack" ; skhd -k 'escape'
apps < d : open -a "Discord" ; skhd -k 'escape'
apps < w : open -a "WhatsApp" ; skhd -k 'escape'

social < return ; default
social < escape ; default

# Web Browsers
:: web
alt - w ; web

web < f : open -a "Firefox" ; skhd -k 'escape'
web < b : open -a "Brave Browser" ; skhd -k 'escape'
web < g : open -a "Google Chrome" ; skhd -k 'escape'
web < s : open -a "Safari" ; skhd -k 'escape'

web < return ; default
web < escape ; default
