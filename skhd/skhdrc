alt - 1 : osascript -e 'tell application "Ghostty" to activate' -e 'tell application "Ghostty" to reopen' ; skhd -k 'escape'
alt - 2 : osascript -e 'tell application "Zed" to activate' -e 'tell application "Zed" to reopen' ; skhd -k 'escape'
alt - 3 : osascript -e 'tell application "RustRover" to activate' -e 'tell application "RustRover" to reopen' ; skhd -k 'escape'
alt - 4 : osascript -e 'tell application "Intellij IDEA" to activate' -e 'tell application "Intellij IDEA" to reopen' ; skhd -k 'escape'
alt - 5 : osascript -e 'tell application "GoLand" to activate' -e 'tell application "GoLand" to reopen' ; skhd -k 'escape'
alt - g : osascript -e 'tell application "Google Chrome" to activate' -e 'tell application "Google Chrome" to reopen' ; skhd -k 'escape'
alt - o : osascript -e 'tell application "Notion" to activate' -e 'tell application "Notion" to reopen' ; skhd -k 'escape'
alt - s : osascript -e 'tell application "Slack" to activate' -e 'tell application "Slack" to reopen' ; skhd -k 'escape'

# Applications
:: apps
alt - a ; apps

apps < f : osascript -e 'tell application "Finder" to activate' -e 'tell application "Finder" to reopen' ; skhd -k 'escape'
apps < v : osascript -e 'tell application "NordVPN" to activate' -e 'tell application "NordVPN" to reopen' ; skhd -k 'escape'
apps < d : osascript -e 'tell application "Docker Desktop" to activate' -e 'tell application "Docker Desktop" to reopen' ; skhd -k 'escape'

apps < return ; default
apps < escape ; default

