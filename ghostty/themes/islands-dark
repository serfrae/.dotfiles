# Islands Dark Theme for Ghostty
# Ported from JetBrains IDEs Islands Dark theme (RustRover 2025.3.1)
# 
# Installation:
# 1. Save this file to ~/.config/ghostty/themes/islands-dark
# 2. Add to your ~/.config/ghostty/config:
#    theme = islands-dark

# Background and foreground (from CONSOLE_BACKGROUND_KEY and CONSOLE_NORMAL_OUTPUT)
background = #191a1c
foreground = #bcbec4

# Cursor (from CARET_COLOR)
cursor-color = #ced0d6
cursor-text = #191a1c

# Selection (from identifier under caret / search result colors)
selection-background = #2d543f
selection-foreground = #bcbec4

# Standard colors (0-7)
# Black (background tint)
palette = 0=#1e1f22
# Red (CONSOLE_ERROR_OUTPUT, BAD_CHARACTER)
palette = 1=#f75464
# Green (DEFAULT_STRING, CONSOLE_USER_INPUT)
palette = 2=#6aab73
# Yellow (HTML_TAG, XML_TAG - gold/yellow)
palette = 3=#d5b778
# Blue (DEFAULT_FUNCTION_DECLARATION)
palette = 4=#56a8f5
# Magenta (DEFAULT_INSTANCE_FIELD, DEFAULT_CONSTANT)
palette = 5=#c77dbb
# Cyan (DEFAULT_NUMBER)
palette = 6=#2aacb8
# White (foreground)
palette = 7=#bcbec4

# Bright colors (8-15)
# Bright Black (DEFAULT_LINE_COMMENT)
palette = 8=#7a7e85
# Bright Red (error stripe / warnings)
palette = 9=#fa6675
# Bright Green (FILESTATUS_ADDED, doc comment)
palette = 10=#73bd79
# Bright Yellow (LOG_INFO_OUTPUT, warning)
palette = 11=#e0bb65
# Bright Blue (FILESTATUS_MODIFIED, hyperlinks)
palette = 12=#70aeff
# Bright Magenta (FOLLOWED_HYPERLINK, template variable)
palette = 13=#b189f5
# Bright Cyan (JS.REGEXP, KOTLIN_NAMED_ARGUMENT)
palette = 14=#56c1d6
# Bright White (CARET_COLOR, bright text)
palette = 15=#ced0d6
