[
  {
    "bindings": {
      "cmd-enter": "terminal_panel::ToggleFocus",
      "cmd-shift-g": [ "task::Spawn", { "task_name": "lazygit", "reveal_target": "center" } ]
    },
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space m h": ["workspace::SendKeystrokes", "m shift-h"],
      "space m j": ["workspace::SendKeystrokes", "m shift-j"],
      "space m k": ["workspace::SendKeystrokes", "m shift-k"],
      "space m l": ["workspace::SendKeystrokes", "m shift-l"]
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "ctrl-h": ["workspace::SendKeystrokes", "` shift-h"],
      "ctrl-j": ["workspace::SendKeystrokes", "` shift-j"],
      "ctrl-k": ["workspace::SendKeystrokes", "` shift-k"],
      "ctrl-l": ["workspace::SendKeystrokes", "` shift-l"]
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      "space e": "editor::Hover",
      "space d": "diagnostics::Deploy",
    },
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "shift-h": "vim::FirstNonWhitespace",
      "shift-l": "vim::EndOfLine",
      "space o": ["task::Spawn", { "task_name": "file_finder", "reveal_target": "center" }],
      "space g": ["task::Spawn", { "task_name": "find_in_files", "reveal_target": "center" }],
    },
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "Q": "vim::MiniQuotes",
      "B": "vim::MiniBrackets",
    },
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward",
    },
  },
]
