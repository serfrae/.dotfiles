{
	"title": "Ctrl/Esc",
	"rules": [
		{
			"description": "Esc if no keychord, else Ctrl",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "left_control",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "left_control",
							"lazy": true
						}
					],
					"to_if_alone": [
						{
							"key_code": "escape"
						}
					]
				}
			]
		}
	]
}
